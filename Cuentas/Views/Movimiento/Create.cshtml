@model Cuentas.Models.Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Crear Movimiento";
}

<h2>Crear Movimiento</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">

            <!-- 🔴 MENSAJE ROJO BOOTSTRAP -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true)
                </div>
            }

            <div class="form-group">
                <label asp-for="Tipo"></label>
                <select asp-for="Tipo" class="form-control">
                    <option value="">-- Seleccione --</option>
                    <option value="1">Crédito</option>
                    <option value="2">Débito</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Concepto"></label>
                <input asp-for="Concepto" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Monto"></label>
                <input asp-for="Monto" type="number" min="0.01" step="0.01" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fecha"></label>
                <input asp-for="Fecha" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="IdCuenta"></label>
                <input asp-for="IdCuenta" type="number" min="1" class="form-control" />
            </div>

            <br />
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

