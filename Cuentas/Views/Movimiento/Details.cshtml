@model Cuentas.Models.Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<h4>Movimiento</h4>
<hr />

<table class="table table-bordered border-primary">
    <tbody>
        <tr>
            <th class="col-sm-3">Tipo</th>
            <td class="col-sm-9">@Html.DisplayFor(model => model.Tipo)</td>
        </tr>
        <tr>
            <th>Concepto</th>
            <td>@Html.DisplayFor(model => model.Concepto)</td>
        </tr>
        <tr>
            <th>Monto</th>
            <td>@Html.DisplayFor(model => model.Monto)</td>
        </tr>
        <tr>
            <th>Fecha</th>
            <td>@Html.DisplayFor(model => model.Fecha)</td>
        </tr>
        <tr>
            <th>Id Cuenta</th>
            <td>@Html.DisplayFor(model => model.IdCuenta)</td>
        </tr>
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la Lista</a>
</div>
